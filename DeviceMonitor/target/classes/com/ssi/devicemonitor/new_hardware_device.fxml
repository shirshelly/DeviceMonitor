<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:id="newHardwareDevicePane" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.ssi.devicemonitor.controller.NewHardwareDeviceController"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <Label text="Manufacturer:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <Label text="Device type:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <Label text="Version:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <Label text="Location:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <Label text="Mac address:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1" />
        <TextField fx:id="manufacturerField" GridPane.rowIndex="1" GridPane.columnIndex="1"  />
        <TextField fx:id="deviceTypeField" GridPane.rowIndex="2" GridPane.columnIndex="1"  />
        <TextField fx:id="versionField" GridPane.rowIndex="3" GridPane.columnIndex="1"  />
        <TextField fx:id="locationField" GridPane.rowIndex="4" GridPane.columnIndex="1"  />
        <TextField fx:id="macField" GridPane.rowIndex="5" GridPane.columnIndex="1"  />
    </children>

</GridPane>
